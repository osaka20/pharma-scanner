    var appPath = fso.GetParentFolderName(location.pathname.replace(/^\//, ""));
    var dataFilePath = fso.BuildPath(appPath, "pharma-data.json");

    var products = [];
    var sales = [];
    var currentEditId = null;
    var language = window.localStorage ? (localStorage.getItem('lang') || 'en') : 'en';
    var marginOffset = window.localStorage ? parseFloat(localStorage.getItem('pharmaMarginOffset') || 0) : 0;
    var selectedProducts = {};

    function addSelected(id) { selectedProducts[id] = true; }
    function removeSelected(id) { delete selectedProducts[id]; }
    function isSelected(id) { return !!selectedProducts[id]; }
    function selectedCount() { var c=0; for (var k in selectedProducts) { if (selectedProducts.hasOwnProperty(k)) c++; } return c; }
