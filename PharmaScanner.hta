<html>
<head>
    <title>PharmaScanner - Application Locale</title>
    <HTA:APPLICATION 
        ID="PharmaScanner"
        APPLICATIONNAME="PharmaScanner"
        BORDER="thick"
        BORDERSTYLE="normal"
        CAPTION="yes"
        MAXIMIZEBUTTON="yes"
        MINIMIZEBUTTON="yes"
        SHOWINTASKBAR="yes"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        WINDOWSTATE="maximize"
    />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            overflow-x: hidden;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }
        
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
        }
        
        .header p {
            opacity: 0.9;
            font-size: 1em;
        }
        
        .content {
            padding: 30px;
        }
        
        .section {
            margin-bottom: 30px;
            padding: 25px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            background: #fafafa;
        }
        
        .section h2 {
            color: #667eea;
            margin-bottom: 20px;
            font-size: 1.5em;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 0.95em;
        }
        
        input, textarea, select {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 6px;
            font-size: 1em;
            font-family: inherit;
            transition: border-color 0.3s;
        }
        
        input:focus, textarea:focus, select:focus {
            outline: none;
            border-color: #667eea;
        }
        
        .button-group {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            margin-top: 20px;
        }
        
        button {
            padding: 14px 28px;
            border: none;
            border-radius: 6px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        
        .btn-secondary {
            background: #f0f0f0;
            color: #333;
        }
        
        .btn-secondary:hover {
            background: #e0e0e0;
        }
        
        .btn-danger {
            background: #ff6b6b;
            color: white;
        }
        
        .btn-danger:hover {
            background: #ff5252;
            transform: translateY(-2px);
        }
        
        .btn-success {
            background: #51cf66;
            color: white;
        }
        
        .btn-success:hover {
            background: #40c057;
        }
        
        .medicine-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .medicine-card {
            background: white;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            transition: all 0.3s ease;
        }
        
        .medicine-card:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            border-color: #667eea;
        }
        
        .medicine-card h3 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 1.3em;
        }
        
        .medicine-card p {
            font-size: 0.95em;
            color: #666;
            margin: 8px 0;
            line-height: 1.5;
        }
        
        .medicine-card .label {
            font-weight: 700;
            color: #333;
        }
        
        .medicine-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }
        
        .medicine-actions button {
            flex: 1;
            padding: 10px 15px;
            font-size: 0.9em;
        }
        
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-box {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 8px;
            text-align: center;
        }
        
        .stat-box .value {
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 8px;
        }
        
        .stat-box .label {
            font-size: 1em;
            opacity: 0.95;
        }
        
        .message {
            padding: 18px;
            border-radius: 6px;
            margin-bottom: 20px;
            display: none;
            font-weight: 500;
        }
        
        .message.success {
            background: #d4edda;
            color: #155724;
            display: block;
            border: 2px solid #c3e6cb;
        }
        
        .message.error {
            background: #f8d7da;
            color: #721c24;
            display: block;
            border: 2px solid #f5c6cb;
        }
        
        .search-box {
            position: relative;
            margin-bottom: 25px;
        }
        
        .search-box input {
            padding-left: 45px;
        }
        
        .search-box::before {
            content: "üîç";
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            font-size: 1.2em;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }
        
        .empty-state .icon {
            font-size: 5em;
            margin-bottom: 20px;
            opacity: 0.5;
        }
        
        .tabs {
            display: flex;
            gap: 0;
            margin-bottom: 30px;
            border-bottom: 3px solid #e0e0e0;
        }
        
        .tab {
            padding: 15px 25px;
            background: none;
            border: none;
            border-bottom: 4px solid transparent;
            cursor: pointer;
            font-size: 1.05em;
            font-weight: 600;
            color: #999;
            transition: all 0.3s ease;
        }
        
        .tab.active {
            color: #667eea;
            border-bottom-color: #667eea;
        }
        
        .tab:hover:not(.active) {
            color: #555;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .footer {
            background: #f9f9f9;
            padding: 25px;
            text-align: center;
            color: #666;
            font-size: 0.95em;
            border-top: 2px solid #e0e0e0;
        }
        
        .info-box {
            background: #e3f2fd;
            border-left: 4px solid #2196f3;
            padding: 15px;
            margin: 15px 0;
            border-radius: 4px;
        }
        
        .info-box strong {
            color: #1976d2;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üíä PharmaScanner</h1>
            <p>Gestion durable des m√©dicaments - Stockage local sur disque dur</p>
        </div>
        
        <div class="content">
            <div id="message" class="message"></div>
            
            <div class="stats">
                <div class="stat-box">
                    <div class="value" id="totalMedicines">0</div>
                    <div class="label">M√©dicaments</div>
                </div>
                <div class="stat-box">
                    <div class="value" id="dbSize">0 KB</div>
                    <div class="label">Taille Fichier</div>
                </div>
                <div class="stat-box">
                    <div class="value" id="lastSave">Jamais</div>
                    <div class="label">Derni√®re Sauvegarde</div>
                </div>
            </div>
            
            <div class="info-box">
                <strong>üíæ Fichier de donn√©es:</strong> <span id="dataFilePath">pharma-data.json</span><br>
                <strong>üìÇ Emplacement:</strong> M√™me dossier que cette application<br>
                <strong>‚úÖ Sauvegarde:</strong> Automatique √† chaque modification
            </div>
            
            <div class="tabs">
                <button class="tab active" data-tab="tab-add">‚ûï Ajouter</button>
                <button class="tab" data-tab="tab-list">üìã Liste</button>
                <button class="tab" data-tab="tab-manage">‚öôÔ∏è Gestion</button>
            </div>
            
            <!-- TAB: Ajouter un m√©dicament -->
            <div id="tab-add" class="tab-content active">
                <div class="section">
                    <h2>Ajouter un M√©dicament</h2>
                    
                    <div class="form-group">
                        <label for="medicineName">Nom du m√©dicament *</label>
                        <input type="text" id="medicineName" placeholder="Ex: Aspirine" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="medicineType">Type *</label>
                        <select id="medicineType" required>
                            <option value="">-- S√©lectionner --</option>
                            <option value="Analg√©sique">Analg√©sique</option>
                            <option value="Antibiotique">Antibiotique</option>
                            <option value="Anti-inflammatoire">Anti-inflammatoire</option>
                            <option value="Antitussif">Antitussif</option>
                            <option value="Antihistaminique">Antihistaminique</option>
                            <option value="Cardiovasculaire">Cardiovasculaire</option>
                            <option value="Digestif">Digestif</option>
                            <option value="Autre">Autre</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="medicineQuantity">Quantit√©</label>
                        <input type="number" id="medicineQuantity" min="0" placeholder="Ex: 10" value="1">
                    </div>
                    
                    <div class="form-group">
                        <label for="medicineExpiry">Date d'expiration</label>
                        <input type="date" id="medicineExpiry">
                    </div>
                    
                    <div class="form-group">
                        <label for="medicineNotes">Notes</label>
                        <textarea id="medicineNotes" rows="4" placeholder="Dosage, conservation, remarques..."></textarea>
                    </div>
                    
                    <div class="button-group">
                        <button class="btn-primary" id="btnAdd">‚úÖ Ajouter</button>
                        <button class="btn-secondary" id="btnClear">üîÑ Effacer</button>
                    </div>
                </div>
            </div>
            
            <!-- TAB: Liste des m√©dicaments -->
            <div id="tab-list" class="tab-content">
                <div class="section">
                    <h2>M√©dicaments Enregistr√©s</h2>
                    
                    <div class="search-box">
                        <input type="text" id="searchInput" placeholder="Chercher un m√©dicament...">
                    </div>
                    
                    <div id="medicineList" class="medicine-list"></div>
                </div>
            </div>
            
            <!-- TAB: Gestion -->
            <div id="tab-manage" class="tab-content">
                <div class="section">
                    <h2>Gestion des Donn√©es</h2>
                    
                    <p style="margin-bottom: 20px; color: #666; line-height: 1.6;">
                        Les donn√©es sont sauvegard√©es automatiquement dans <strong>pharma-data.json</strong> 
                        dans le m√™me dossier que cette application. Ce fichier est durable et ne sera jamais 
                        perdu tant que vous ne le supprimez pas.
                    </p>
                    
                    <div class="button-group">
                        <button class="btn-success" id="btnSaveNow">üíæ Sauvegarder Maintenant</button>
                        <button class="btn-primary" id="btnReload">üîÑ Recharger Donn√©es</button>
                        <button class="btn-danger" id="btnClearAll">üóëÔ∏è Tout Effacer</button>
                    </div>
                    
                    <div style="background: #fff; padding: 20px; border-radius: 6px; margin-top: 25px; border: 2px solid #e0e0e0;">
                        <h3 style="color: #333; margin-bottom: 15px;">üìä Informations du Fichier</h3>
                        <p id="fileInfo" style="font-size: 0.95em; color: #666; line-height: 1.8;"></p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="footer">
            üîê Donn√©es stock√©es localement sur votre disque dur ‚Ä¢ Sauvegarde automatique ‚Ä¢ Aucun risque de perte
        </div>
    </div>
    
    <script type="text/javascript">
        // ===== FILESYSTEM MANAGER (HTA) =====
        var fso = new ActiveXObject("Scripting.FileSystemObject");
        var dataFileName = "pharma-data.json";
        var dataFilePath = getDataFilePath();
        var medicines = [];
        
        // Get data file path
        function getDataFilePath() {
            var appPath = fso.GetParentFolderName(location.pathname.replace(/^\//, ""));
            return fso.BuildPath(appPath, dataFileName);
        }
        
        // Load data from file
        function loadData() {
            try {
                if (fso.FileExists(dataFilePath)) {
                    var file = fso.OpenTextFile(dataFilePath, 1, false, -1);
                    var content = file.ReadAll();
                    file.Close();
                    
                    if (content && content.trim()) {
                        var data = JSON.parse(content);
                        medicines = data.medicines || [];
                        showMessage("‚úÖ Donn√©es charg√©es: " + medicines.length + " m√©dicament(s)", "success");
                    } else {
                        medicines = [];
                    }
                } else {
                    medicines = [];
                    saveData(); // Create initial file
                }
            } catch (e) {
                showMessage("‚ùå Erreur de chargement: " + e.message, "error");
                medicines = [];
            }
        }
        
        // Save data to file
        function saveData() {
            try {
                var data = {
                    version: 1,
                    medicines: medicines,
                    lastSave: new Date().toISOString()
                };
                
                var json = JSON.stringify(data, null, 2);
                var file = fso.CreateTextFile(dataFilePath, true, true);
                file.Write(json);
                file.Close();
                
                updateStats();
                return true;
            } catch (e) {
                showMessage("‚ùå Erreur de sauvegarde: " + e.message, "error");
                return false;
            }
        }
        
        // Add medicine
        function addMedicine(medicine) {
            medicine.id = new Date().getTime();
            medicine.timestamp = new Date().toISOString();
            medicines.push(medicine);
            
            if (saveData()) {
                showMessage("‚úÖ M√©dicament ajout√© avec succ√®s", "success");
                return true;
            }
            return false;
        }
        
        // Delete medicine
        function deleteMedicine(id) {
            var index = -1;
            for (var i = 0; i < medicines.length; i++) {
                if (medicines[i].id === id) {
                    index = i;
                    break;
                }
            }
            
            if (index !== -1) {
                medicines.splice(index, 1);
                if (saveData()) {
                    showMessage("‚úÖ M√©dicament supprim√©", "success");
                    updateUI();
                    return true;
                }
            }
            return false;
        }
        
        // Clear all
        function clearAll() {
            medicines = [];
            if (saveData()) {
                showMessage("‚úÖ Toutes les donn√©es ont √©t√© effac√©es", "success");
                updateUI();
                return true;
            }
            return false;
        }
        
        // Update stats
        function updateStats() {
            document.getElementById("totalMedicines").textContent = medicines.length;
            
            try {
                if (fso.FileExists(dataFilePath)) {
                    var file = fso.GetFile(dataFilePath);
                    var sizeKB = (file.Size / 1024).toFixed(2);
                    document.getElementById("dbSize").textContent = sizeKB + " KB";
                    
                    var modDate = new Date(file.DateLastModified);
                    document.getElementById("lastSave").textContent = modDate.toLocaleTimeString("fr-FR");
                    
                    document.getElementById("fileInfo").innerHTML = 
                        "<strong>Fichier:</strong> " + dataFilePath + "<br>" +
                        "<strong>Taille:</strong> " + sizeKB + " KB<br>" +
                        "<strong>M√©dicaments:</strong> " + medicines.length + "<br>" +
                        "<strong>Derni√®re modification:</strong> " + modDate.toLocaleString("fr-FR");
                } else {
                    document.getElementById("dbSize").textContent = "0 KB";
                    document.getElementById("lastSave").textContent = "Jamais";
                }
            } catch (e) {
                console.log(e);
            }
            
            document.getElementById("dataFilePath").textContent = dataFilePath;
        }
        
        // Show message
        function showMessage(text, type) {
            var messageEl = document.getElementById("message");
            messageEl.textContent = text;
            messageEl.className = "message " + type;
            setTimeout(function() {
                messageEl.className = "message";
            }, 5000);
        }
        
        // Format date
        function formatDate(dateStr) {
            if (!dateStr) return "-";
            var d = new Date(dateStr);
            return d.toLocaleDateString("fr-FR");
        }
        
        // Escape HTML
        function escapeHtml(text) {
            var div = document.createElement("div");
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Render medicines
        function renderMedicines(list) {
            var container = document.getElementById("medicineList");
            
            if (list.length === 0) {
                container.innerHTML = 
                    '<div class="empty-state" style="grid-column: 1/-1;">' +
                    '<div class="icon">üì≠</div>' +
                    '<p style="font-size: 1.2em;">Aucun m√©dicament enregistr√©</p>' +
                    '</div>';
                return;
            }
            
            var html = "";
            for (var i = 0; i < list.length; i++) {
                var m = list[i];
                html += '<div class="medicine-card">' +
                    '<h3>' + escapeHtml(m.name) + '</h3>' +
                    '<p><span class="label">Type:</span> ' + escapeHtml(m.type) + '</p>' +
                    '<p><span class="label">Quantit√©:</span> ' + m.quantity + '</p>' +
                    (m.expiry ? '<p><span class="label">Expiration:</span> ' + formatDate(m.expiry) + '</p>' : '') +
                    (m.notes ? '<p><span class="label">Notes:</span> ' + escapeHtml(m.notes.substring(0, 100)) + '</p>' : '') +
                    '<div class="medicine-actions">' +
                    '<button class="btn-secondary" onclick="editMedicine(' + m.id + ')">‚úèÔ∏è √âditer</button>' +
                    '<button class="btn-danger" onclick="deleteMedicine(' + m.id + ')">üóëÔ∏è Supprimer</button>' +
                    '</div>' +
                    '</div>';
            }
            container.innerHTML = html;
        }
        
        // Update UI
        function updateUI() {
            updateStats();
            renderMedicines(medicines);
        }
        
        // Edit medicine
        function editMedicine(id) {
            for (var i = 0; i < medicines.length; i++) {
                if (medicines[i].id === id) {
                    var m = medicines[i];
                    document.getElementById("medicineName").value = m.name;
                    document.getElementById("medicineType").value = m.type;
                    document.getElementById("medicineQuantity").value = m.quantity;
                    document.getElementById("medicineExpiry").value = m.expiry || "";
                    document.getElementById("medicineNotes").value = m.notes || "";
                    
                    deleteMedicine(id);
                    document.querySelector('[data-tab="tab-add"]').click();
                    document.getElementById("medicineName").focus();
                    break;
                }
            }
        }
        
        // Event: Add button
        document.getElementById("btnAdd").onclick = function() {
            var name = document.getElementById("medicineName").value.trim();
            var type = document.getElementById("medicineType").value.trim();
            
            if (!name || !type) {
                showMessage("‚ùå Veuillez remplir les champs obligatoires", "error");
                return;
            }
            
            if (addMedicine({
                name: name,
                type: type,
                quantity: parseInt(document.getElementById("medicineQuantity").value) || 1,
                expiry: document.getElementById("medicineExpiry").value,
                notes: document.getElementById("medicineNotes").value.trim()
            })) {
                document.getElementById("medicineName").value = "";
                document.getElementById("medicineType").value = "";
                document.getElementById("medicineQuantity").value = "1";
                document.getElementById("medicineExpiry").value = "";
                document.getElementById("medicineNotes").value = "";
                updateUI();
            }
        };
        
        // Event: Clear button
        document.getElementById("btnClear").onclick = function() {
            document.getElementById("medicineName").value = "";
            document.getElementById("medicineType").value = "";
            document.getElementById("medicineQuantity").value = "1";
            document.getElementById("medicineExpiry").value = "";
            document.getElementById("medicineNotes").value = "";
        };
        
        // Event: Search
        document.getElementById("searchInput").onkeyup = function() {
            var term = this.value.toLowerCase();
            var filtered = [];
            for (var i = 0; i < medicines.length; i++) {
                var m = medicines[i];
                if (m.name.toLowerCase().indexOf(term) !== -1 || 
                    m.type.toLowerCase().indexOf(term) !== -1) {
                    filtered.push(m);
                }
            }
            renderMedicines(filtered);
        };
        
        // Event: Save now
        document.getElementById("btnSaveNow").onclick = function() {
            if (saveData()) {
                showMessage("‚úÖ Donn√©es sauvegard√©es avec succ√®s", "success");
            }
        };
        
        // Event: Reload
        document.getElementById("btnReload").onclick = function() {
            loadData();
            updateUI();
        };
        
        // Event: Clear all
        document.getElementById("btnClearAll").onclick = function() {
            if (confirm("‚ö†Ô∏è Cela supprimera TOUS les m√©dicaments du fichier. √ätes-vous s√ªr?")) {
                clearAll();
            }
        };
        
        // Tab switching
        var tabs = document.querySelectorAll(".tab");
        for (var i = 0; i < tabs.length; i++) {
            tabs[i].onclick = function() {
                var allTabs = document.querySelectorAll(".tab");
                var allContents = document.querySelectorAll(".tab-content");
                
                for (var j = 0; j < allTabs.length; j++) {
                    allTabs[j].className = "tab";
                    allContents[j].className = "tab-content";
                }
                
                this.className = "tab active";
                document.getElementById(this.getAttribute("data-tab")).className = "tab-content active";
            };
        }
        
        // Initialize
        window.onload = function() {
            loadData();
            updateUI();
            showMessage("‚úÖ Application charg√©e - Fichier: " + dataFilePath, "success");
        };
    </script>
</body>
</html>
