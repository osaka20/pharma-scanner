    function t(key) {
      if (translations[language] && translations[language][key]) { return translations[language][key]; }
      return key;
    }

    function applyTranslations() {
      var nodes = document.querySelectorAll('[data-translate]');
      for (var i = 0; i < nodes.length; i++) {
        var k = nodes[i].getAttribute('data-translate');
        nodes[i].innerText = t(k);
      }
      var ph = document.querySelectorAll('[data-translate-placeholder]');
      for (var j = 0; j < ph.length; j++) {
        var k2 = ph[j].getAttribute('data-translate-placeholder');
        ph[j].setAttribute('placeholder', t(k2));
      }
      document.documentElement.setAttribute('dir', language === 'ar' ? 'rtl' : 'ltr');
      document.documentElement.setAttribute('lang', language);
    }

    function changeLanguage() {
      language = document.getElementById('langSelect').value;
      if (window.localStorage) localStorage.setItem('lang', language);
      applyTranslations();
      renderAll();
    }

    function packState() {
      var pArr = [];
      for (var i = 0; i < products.length; i++) {
        var p = products[i];
        pArr.push({ i: p.id, n: p.name, b: p.brand, c: p.code, bp: p.purchasePrice, sp: p.salePrice, m: p.margin, q: p.quantity, no: p.notes });
      }
      var sArr = [];
      for (var j = 0; j < sales.length; j++) {
        var s = sales[j];
        sArr.push([s.date, s.productId, s.marginTotal, s.type === 'undo' ? 'u' : 's', s.undone ? 1 : 0, s.qty || 1]);
      }
      return JSON.stringify({ v:2, p:pArr, s:sArr, o: marginOffset });
    }

    function unpackState(text) {
      var data = JSON.parse(text);
      if (data.v === 2) {
        products = [];
        for (var i = 0; i < (data.p || []).length; i++) {
          var p = data.p[i];
          products.push({
            id: p.i,
            name: p.n,
            brand: p.b,
            code: p.c,
            purchasePrice: p.bp,
            salePrice: p.sp,
            margin: p.m,
            quantity: p.q,
            notes: p.no || ''
          });
        }
        sales = [];
        for (var j = 0; j < (data.s || []).length; j++) {
          var s = data.s[j];
          sales.push({
            date: s[0],
            productId: s[1],
            marginTotal: s[2],
            type: s[3] === 'u' ? 'undo' : 'sale',
            undone: !!s[4],
            qty: s[5] || 1,
            productName: ''
          });
        }
        marginOffset = parseFloat(data.o || 0) || 0;
      } else {
        products = data.products || [];
        sales = data.sales || [];
        marginOffset = parseFloat(data.marginOffset || 0) || 0;
      }
      var names = {};
      for (var k = 0; k < products.length; k++) { names[products[k].id] = products[k].name; }
      for (var h = 0; h < sales.length; h++) {
        sales[h].productName = names[sales[h].productId] || '(deleted)';
      }
    }

    function loadData() {
      try {
        if (fso.FileExists(dataFilePath)) {
          var file = fso.OpenTextFile(dataFilePath, 1, false, -1);
          var content = file.ReadAll();
          file.Close();
          if (content && content.replace(/\s+/g,'') !== '') { unpackState(content); }
        } else {
          products = [];
          sales = [];
          marginOffset = 0;
          saveAll();
        }
      } catch (e) {
        showAlert('Error loading data: ' + e.message, 'error');
        products = [];
        sales = [];
      }
      renderAll();
    }

    function saveAll() {
      try {
        var payload = packState();
        var file = fso.CreateTextFile(dataFilePath, true, true);
        file.Write(payload);
        file.Close();
      } catch (e) {
        showAlert('Error saving data: ' + e.message, 'error');
      }
    }

    function formatEuro(v) { return parseFloat(v || 0).toFixed(2) + '€'; }

    function renderDashboard() {
      var total = products.length;
      var value = 0;
      for (var i = 0; i < products.length; i++) { value += (parseFloat(products[i].salePrice || 0) * parseFloat(products[i].quantity || 0)); }
      var marginRaw = 0;
      for (var j = 0; j < sales.length; j++) { marginRaw += parseFloat(sales[j].marginTotal || 0); }
      var marginVal = marginRaw - marginOffset;
      document.getElementById('totalProducts').innerText = total;
      document.getElementById('totalValue').innerText = formatEuro(value);
      document.getElementById('totalMargin').innerText = formatEuro(marginVal);

      var recent = products.slice(Math.max(products.length - 5, 0)).reverse();
      var html = '';
      if (recent.length === 0) {
        html = '<tr><td colspan="5" style="text-align: center; color: #999;">' + t('noProducts') + '</td></tr>';
      } else {
        for (var r = 0; r < recent.length; r++) {
          var p = recent[r];
          html += '<tr><td>' + p.name + '</td><td>' + p.brand + '</td><td>' + formatEuro(p.salePrice) + '</td>' +
                  '<td class="' + (parseFloat(p.margin || 0) < 0 ? 'margin-negative' : '') + '">' + formatEuro(p.margin) + '</td>' +
                  '<td>' + (p.quantity || 0) + '</td></tr>';
        }
      }
      document.getElementById('recentProducts').innerHTML = html;
    }

    function getFilteredSales() {
      var startEl = document.getElementById('historyStart');
      var endEl = document.getElementById('historyEnd');
      var searchEl = document.getElementById('historySearch');
      var start = startEl && startEl.value ? new Date(startEl.value) : null;
      var end = endEl && endEl.value ? new Date(endEl.value) : null;
      var term = searchEl && searchEl.value ? searchEl.value.toLowerCase() : '';

      var res = [];
      for (var i = 0; i < sales.length; i++) {
        var sale = sales[i];
        var d = new Date(sale.date);
        if (start && d < start) continue;
        if (end) {
          var endDay = new Date(end);
          endDay.setHours(23,59,59,999);
          if (d > endDay) continue;
        }
        var name = (sale.productName || '').toLowerCase();
        var type = (sale.type || 'sale').toLowerCase();
        if (term === '' || name.indexOf(term) !== -1 || type.indexOf(term) !== -1) {
          res.push(sale);
        }
      }
      res.sort(function(a,b){ return new Date(b.date) - new Date(a.date); });
      return res;
    }

    function renderHistory() {
      var list = getFilteredSales();
      var html = '';
      if (list.length === 0) {
        html = '<tr><td colspan="5" style="text-align: center; color: #999;">' + t('noSales') + '</td></tr>';
      } else {
        for (var i = 0; i < list.length; i++) {
          var sale = list[i];
          var d = new Date(sale.date);
          var formatted = d.toLocaleDateString() + ' ' + d.toLocaleTimeString();
          var marginVal = parseFloat(sale.marginTotal || 0);
          var typeLabel = sale.type === 'undo' ? t('undoType') : t('sale');
          var qtyTxt = sale.type === 'undo' ? '+' + (sale.qty || 1) : '-' + (sale.qty || 1);
          html += '<tr><td>' + formatted + '</td><td>' + sale.productName + '</td>' +
                  '<td class="' + (marginVal < 0 ? 'margin-negative' : '') + '">' + formatEuro(marginVal) + '</td>' +
                  '<td>' + qtyTxt + '</td><td>' + typeLabel + '</td></tr>';
        }
      }
      document.getElementById('historyList').innerHTML = html;
    }

    function applyHistoryFilters() { renderHistory(); }
    function clearHistoryFilters() {
      var startEl = document.getElementById('historyStart');
      var endEl = document.getElementById('historyEnd');
      var searchEl = document.getElementById('historySearch');
      if (startEl) startEl.value = '';
      if (endEl) endEl.value = '';
      if (searchEl) searchEl.value = '';
      renderHistory();
    }

    function renderProducts() {
      var searchEl = document.getElementById('searchInput');
      var search = searchEl && searchEl.value ? searchEl.value.toLowerCase() : '';
      var filtered = [];
      for (var i = 0; i < products.length; i++) {
        var p = products[i];
        var name = (p.name || '').toLowerCase();
        var brand = (p.brand || '').toLowerCase();
        var code = (p.code || '').toLowerCase();
        if (search === '' || name.indexOf(search) !== -1 || brand.indexOf(search) !== -1 || code.indexOf(search) !== -1) {
          filtered.push(p);
        }
      }
      var html = '';
      if (filtered.length === 0) {
        html = '<tr><td colspan="9" style="text-align: center; color: #999;">' + t('noProducts') + '</td></tr>';
      } else {
        for (var j = 0; j < filtered.length; j++) {
          var p2 = filtered[j];
          var hasUndo = false;
          for (var s = 0; s < sales.length; s++) {
            if (sales[s].productId === p2.id && sales[s].type === 'sale' && !sales[s].undone) { hasUndo = true; break; }
          }
          var checked = isSelected(p2.id) ? 'checked' : '';
          html += '<tr>' +
            '<td style="text-align:center;"><input type="checkbox" '+checked+' onchange="toggleSelect('+p2.id+', this.checked)"></td>' +
            '<td>'+p2.name+'</td><td>'+p2.brand+'</td><td>'+formatEuro(p2.purchasePrice)+'</td>' +
            '<td>'+formatEuro(p2.salePrice)+'</td>' +
            '<td class="'+(parseFloat(p2.margin || 0) < 0 ? 'margin-negative':'')+'">'+formatEuro(p2.margin)+'</td>' +
            '<td>'+(p2.quantity || 0)+'</td>' +
            '<td><input type="number" id="sellQty-'+p2.id+'" min="1" step="1" value="1" style="width:70px; padding:0.2rem; border:1px solid #ccc; border-radius:4px;"></td>' +
            '<td class="actions">' +
              '<button class="sale-btn" onclick="sellProduct('+p2.id+')" '+(p2.quantity<=0?'disabled':'')+'>'+t('sell')+'</button>' +
              '<button class="undo-btn" onclick="undoSale('+p2.id+')" '+(!hasUndo?'disabled':'')+'>'+t('undo')+'</button>' +
              '<button class="btn btn-secondary" onclick="editProduct('+p2.id+')">'+t('edit')+'</button>' +
              '<button class="btn btn-danger" onclick="deleteProduct('+p2.id+')">'+t('delete')+'</button>' +
            '</td>' +
          '</tr>';
        }
      }
      document.getElementById('productsList').innerHTML = html;
      var selectAllEl = document.getElementById('selectAllCheckbox');
      if (selectAllEl) {
        var allSelected = filtered.length > 0;
        for (var q = 0; q < filtered.length; q++) { if (!isSelected(filtered[q].id)) { allSelected = false; break; } }
        selectAllEl.checked = allSelected;
      }
    }

    function toggleSelect(id, checked) {
      if (checked) addSelected(id); else removeSelected(id);
    }

    function toggleSelectAll(checked) {
      if (checked) { for (var i = 0; i < products.length; i++) addSelected(products[i].id); }
      else { clearSelected(); }
      renderProducts();
    }

    function bulkDelete() {
      if (selectedCount() === 0) return showAlert(t('selectionNone'), 'error');
      var filtered = [];
      for (var i = 0; i < products.length; i++) { if (!isSelected(products[i].id)) filtered.push(products[i]); }
      products = filtered;
      clearSelected();
      saveAll();
      renderProducts();
      showAlert(t('deleteSuccess'), 'success');
    }

    function openBulkQtyModal() {
      if (selectedCount() === 0) return showAlert(t('selectionNone'), 'error');
      var list = [];
      for (var i = 0; i < products.length; i++) { if (isSelected(products[i].id)) list.push(products[i]); }
      document.getElementById('bulkSelectedCount').innerText = list.length;
      var html = '';
      for (var j = 0; j < list.length; j++) {
        var p = list[j];
        html += '<div style="padding: 0.25rem 0; border-bottom: 1px solid #ddd;">'+p.name+' - '+p.brand+' ('+t('quantity')+': '+p.quantity+')</div>';
      }
      document.getElementById('bulkSelectedList').innerHTML = html;
      document.getElementById('bulkQtyInput').value = 0;
      document.getElementById('bulkQtyModal').classList.add('active');
    }

    function closeBulkQtyModal() { document.getElementById('bulkQtyModal').classList.remove('active'); }

    function confirmBulkSetQuantity() {
      var qty = parseInt(document.getElementById('bulkQtyInput').value || 0,10);
      if (isNaN(qty) || qty < 0) return showAlert(t('stockError'), 'error');
      var msg = t('bulkQtyConfirm').replace('{{qty}}', qty).replace('{{count}}', selectedCount());
      if (!window.confirm(msg)) return;
      for (var i = 0; i < products.length; i++) { if (isSelected(products[i].id)) products[i].quantity = qty; }
      clearSelected();
      closeBulkQtyModal();
      saveAll();
      renderProducts();
      showAlert(t('saveSuccess'), 'success');
    }

    function renderAll() {
      renderDashboard();
      renderProducts();
      renderHistory();
      applyTranslations();
    }

    function sellProduct(id) {
      var product = null;
      for (var i = 0; i < products.length; i++) { if (products[i].id === id) { product = products[i]; break; } }
      if (!product) return;
      var qtyInput = document.getElementById('sellQty-'+id);
      var qty = parseInt(qtyInput && qtyInput.value ? qtyInput.value : 1, 10);
      if (isNaN(qty) || qty <= 0) return showAlert(t('stockError'), 'error');
      if (product.quantity < qty) return showAlert(t('stockError'), 'error');
      product.quantity -= qty;
      var marginPerUnit = parseFloat(product.margin || 0);
      var sale = { id: Date.now(), productId: id, productName: product.name, marginTotal: marginPerUnit * qty, qty: qty, date: new Date().toISOString(), type: 'sale', undone: false };
      sales.push(sale);
      if (qtyInput) qtyInput.value = 1;
      saveAll();
      renderAll();
      showAlert(t('saleSuccess') + (marginPerUnit * qty).toFixed(2) + '€', 'success');
    }

    function undoSale(id) {
      var product = null;
      for (var i = 0; i < products.length; i++) { if (products[i].id === id) { product = products[i]; break; } }
      if (!product) return;
      var lastSaleIndex = -1;
      for (var j = sales.length - 1; j >= 0; j--) { if (sales[j].productId === id && sales[j].type === 'sale' && !sales[j].undone) { lastSaleIndex = j; break; } }
      if (lastSaleIndex === -1) return showAlert(t('noSaleToUndo'), 'error');
      var lastSale = sales[lastSaleIndex];
      var qty = lastSale.qty || 1;
      product.quantity += qty;
      sales[lastSaleIndex].undone = true;
      sales.push({ id: Date.now(), productId: id, productName: product.name, marginTotal: -Math.abs(parseFloat(lastSale.marginTotal || 0)), qty: qty, date: new Date().toISOString(), type: 'undo' });
      saveAll();
      renderAll();
      showAlert(t('undoSuccess'), 'success');
    }

    function resetMargin() {
      if (!window.confirm(t('resetConfirm'))) return;
      var totalMargin = 0;
      for (var i = 0; i < sales.length; i++) { totalMargin += parseFloat(sales[i].marginTotal || 0); }
      marginOffset = totalMargin;
      if (window.localStorage) localStorage.setItem('pharmaMarginOffset', marginOffset);
      saveAll();
      renderAll();
      showAlert(t('resetSuccess'), 'success');
    }

    function exportHistoryPDF() {
      var list = getFilteredSales();
      var totalRawMargin = 0;
      for (var i = 0; i < list.length; i++) { totalRawMargin += parseFloat(list[i].marginTotal || 0); }
