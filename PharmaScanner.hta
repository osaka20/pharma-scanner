        '<h2>'+t('historyTitle')+'</h2>' +
        '<p>'+t('saleDate')+': '+rangeText+'</p>' +
        '<p>'+t('saleMargin')+': '+totalRawMargin.toFixed(2)+'€</p>' +
        '<table><thead><tr><th>'+t('saleDate')+'</th><th>'+t('saleProduct')+'</th><th>'+t('saleQuantity')+'</th><th>'+t('saleType')+'</th><th>'+t('saleMargin')+'</th></tr></thead><tbody>' + (rows || '<tr><td colspan="5">'+t('noSales')+'</td></tr>') + '</tbody></table></body></html>';
      var win = window.open('', '_blank');
      win.document.write(html);
      win.document.close();
      win.focus();
      win.print();
    }

    function openAddForm() {
      currentEditId = null;
      document.getElementById('formTitle').innerText = t('addProductTitle');
      document.getElementById('productForm').reset();
      document.getElementById('formModal').classList.add('active');
    }

    function editProduct(id) {
      var product = null;
      for (var i = 0; i < products.length; i++) { if (products[i].id === id) { product = products[i]; break; } }
      if (!product) return;
      currentEditId = id;
      document.getElementById('formTitle').innerText = t('editProductTitle');
      document.getElementById('formName').value = product.name;
      document.getElementById('formBrand').value = product.brand;
      document.getElementById('formCode').value = product.code || '';
      document.getElementById('formPurchasePrice').value = product.purchasePrice || '';
      document.getElementById('formSalePrice').value = product.salePrice || '';
      document.getElementById('formMargin').value = product.margin || '';
      document.getElementById('formQuantity').value = product.quantity || '';
      document.getElementById('formNotes').value = product.notes || '';
      document.getElementById('formModal').classList.add('active');
    }

    function deleteProduct(id) {
      if (!window.confirm(t('deleteConfirm'))) return;
      var filtered = [];
      for (var i = 0; i < products.length; i++) { if (products[i].id !== id) filtered.push(products[i]); }
      products = filtered;
      removeSelected(id);
      saveAll();
      renderProducts();
      showAlert(t('deleteSuccess'), 'success');
    }

    function saveProduct(event) {
      if (event && event.preventDefault) event.preventDefault();
      var name = document.getElementById('formName').value.replace(/^\s+|\s+$/g,'');
      var brand = document.getElementById('formBrand').value.replace(/^\s+|\s+$/g,'');
      if (!name || !brand) {
        var msg = language === 'ar' ? 'يرجى إدخال الاسم والعلامة التجارية' : 'Please enter name and brand';
        return showAlert(msg, 'error');
      }
      var purchase = parseFloat(document.getElementById('formPurchasePrice').value || 0);
      var sale = parseFloat(document.getElementById('formSalePrice').value || 0);
      var marginInput = document.getElementById('formMargin').value;
      var computedMargin = marginInput === '' ? (sale - purchase).toFixed(2) : marginInput;
      var product = {
        id: currentEditId || Date.now(),
        name: name,
        brand: brand,
        code: document.getElementById('formCode').value,
        purchasePrice: purchase,
        salePrice: sale,
        margin: parseFloat(computedMargin || 0),
        quantity: parseInt(document.getElementById('formQuantity').value || 0,10),
        notes: document.getElementById('formNotes').value
      };
      if (currentEditId) {
        for (var i = 0; i < products.length; i++) { if (products[i].id === currentEditId) { products[i] = product; break; } }
      } else { products.push(product); }
      saveAll();
      closeForm();
      renderAll();
      showAlert(t('saveSuccess'), 'success');
    }

    function calculateMargin() {
      var purchase = parseFloat(document.getElementById('formPurchasePrice').value || 0);
      var sale = parseFloat(document.getElementById('formSalePrice').value || 0);
      document.getElementById('formMargin').value = (sale - purchase).toFixed(2);
    }

    function closeForm() { document.getElementById('formModal').classList.remove('active'); }
    function filterProducts() { renderProducts(); }

    function exportData() {
      var data = packState();
      var f = fso.CreateTextFile(fso.BuildPath(appPath, 'pharma-export-' + new Date().toISOString().split('T')[0] + '.json'), true, true);
      f.Write(data);
      f.Close();
      showAlert(t('exportSuccess'), 'success');
    }

    function handleImport() {
      var fileInput = document.getElementById('importFile');
      var file = fileInput.files[0];
      if (!file) return;
      if (!window.confirm(t('importConfirm'))) { fileInput.value = ''; return; }
      var reader = new FileReader();
      reader.onload = function(e) {
        try {
          unpackState(e.target.result);
          saveAll();
          renderAll();
          showAlert(t('importSuccess'), 'success');
          fileInput.value = '';
        } catch (err) { showAlert('Error: ' + err.message, 'error'); }
      };
      reader.readAsText(file);
    }

    function showAlert(message, type) {
      var alert = document.getElementById('alert');
      alert.innerText = message;
      alert.className = 'alert show alert-' + type;
      setTimeout(function(){ alert.classList.remove('show'); }, 3000);
    }

    function changePage(page, button) {
      var pages = document.querySelectorAll('.page');
      for (var i = 0; i < pages.length; i++) { pages[i].classList.remove('active'); }
      document.getElementById(page).classList.add('active');
      var buttons = document.querySelectorAll('.nav-btn');
      for (var j = 0; j < buttons.length; j++) { buttons[j].classList.remove('active'); }
      button.classList.add('active');
    }

    var pendingFontSize = 'normal';
    var currentFontSize = 'normal';

    function openSettings() {
      currentFontSize = getSavedFontSize();
      pendingFontSize = currentFontSize;
      document.getElementById('settingsModal').className = 'modal active';
      highlightSelectedFont(currentFontSize);
      updatePreviewText(currentFontSize);
      applyTranslations();
    }

    function getSavedFontSize() {
      try {
        var settingsPath = fso.BuildPath(appPath, "pharma-settings.json");
        if (fso.FileExists(settingsPath)) {
          var file = fso.OpenTextFile(settingsPath, 1, false, -1);
          var content = file.ReadAll();
          file.Close();
          var settings = JSON.parse(content);
          return settings.fontSize || 'normal';
        }
      } catch(e) {}
      return 'normal';
    }

    function saveFontSize(size) {
      try {
        var settingsPath = fso.BuildPath(appPath, "pharma-settings.json");
        var settings = {fontSize: size};
        var file = fso.CreateTextFile(settingsPath, true, true);
        file.Write(JSON.stringify(settings));
        file.Close();
        return true;
      } catch(e) {
        return false;
      }
    }

    function highlightSelectedFont(size) {
      var btns = document.querySelectorAll('.font-btn');
      for (var i = 0; i < btns.length; i++) {
        btns[i].className = 'font-btn';
      }
      var sizeMap = {'small': 0, 'normal': 1, 'large': 2, 'xlarge': 3};
      var idx = sizeMap[size];
      if (idx !== undefined && btns[idx]) {
        btns[idx].className = 'font-btn selected';
      }
    }

    function selectFontSize(size, btn) {
      pendingFontSize = size;
      highlightSelectedFont(size);
      updatePreviewText(size);
    }

    function updatePreviewText(size) {
      var zooms = {'small': '90%', 'normal': '100%', 'large': '115%', 'xlarge': '130%'};
      var preview = document.getElementById('fontPreviewText');
      if (preview) {
        preview.style.zoom = zooms[size] || '100%';
      }
    }

    function cancelSettings() {
      document.getElementById('settingsModal').className = 'modal';
    }

    function confirmSettings() {
      saveFontSize(pendingFontSize);
      currentFontSize = pendingFontSize;
      applyFontSizeToBody(pendingFontSize);
      document.getElementById('settingsModal').className = 'modal';
      showAlert(t('saveSuccess'), 'success');
    }

    function applyFontSizeToBody(size) {
      var zooms = {'small': '90%', 'normal': '100%', 'large': '115%', 'xlarge': '130%'};
      document.body.style.zoom = zooms[size] || '100%';
    }

    function applyFontSize() {
      var fontSize = getSavedFontSize();
      currentFontSize = fontSize;
      applyFontSizeToBody(fontSize);
    }

    window.onload = function() {
      var select = document.getElementById('langSelect');
      select.value = language;
      applyFontSize();
      applyTranslations();
      loadData();
    };
  </script>
</body>
</html>
